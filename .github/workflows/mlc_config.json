{
  "ignorePatterns": [
    {
      "pattern": "^\\./"
    },
    {
      "pattern": "^\\.\\./"
    },
    {
      "pattern": "^https?://localhost"
    },
    {
      "pattern": "^http://hostname"
    },
    {
      "pattern": "^https://docs.raku.org"
    },
    {
      "pattern": "^hxxps?://[a-zA-Z0-9]+"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "^/blog/",
      "replacement": "{{BASEURL}}/blog/"
    }
  ],
  "timeout": "20s",
  "retryCount": 2,
  "aliveStatusCodes": [
    200,
    206,
    403,
    406,
    429
  ]
}
